generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  username  String      @unique
  password  String
  email     String
  picture   String?
  createdAt DateTime    @default(now())
  updateAt  DateTime    @updatedAt
  Bookshelf Bookshelf[]
}

model Bookshelf {
  id          String   @id @default(uuid())
  title       String
  description String?
  owner       User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
  userId      String
}
